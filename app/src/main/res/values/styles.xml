<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommitItemName">
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CommitItemText">

        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/commit_item_text_margin_left</item>
        <item name="android:layout_marginLeft">@dimen/commit_item_text_margin_left</item>
        <item name="android:maxLines">1</item>

    </style>

</resources>
